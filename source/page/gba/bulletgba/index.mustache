<div class="container">
  <header>
    <div class="jumbotron">
      <h1>BulletGBA</h1>
      <p>
        A homebrew bullet hell simulator for Gameboy Advance.
      </p>
      <p>
        {{#strip_html}}
          <a class="btn btn-primary btn-lg"
            href="files/bulletgba-5.0.rom.gba.zip">
            Download GBA ROM
          </a>
        {{/strip_html}}
      </p>
      <p>
        <small>
          (64 Mbit Cartridge + 256 Kbit SRAM)
        </small>
      </p>
    </div>
  </header>

  <section>
    <div class="page-header">
      <h1>
        Movie &amp; Screenshots
      </h1>
    </div>
    <iframe width="320" height="240" src="https://www.youtube.com/embed/2rI0Sw1bHLM" frameborder="0"></iframe>
    <hr />
    <div class="row">
      <div class="col-lg-3">
        {{#lightbox}}
          img/photo.jpg photo
        {{/lightbox}}
      </div>
      <div class="col-lg-3">
        {{#lightbox}}
          img/title.png title
        {{/lightbox}}
      </div>
      <div class="col-lg-3">
        {{#lightbox}}
          img/normal.png simulator
        {{/lightbox}}
      </div>
      <div class="col-lg-3">
        {{#lightbox}}
          img/shooting.png shooting mode
        {{/lightbox}}
      </div>
    </div>
  </section>
</div>
