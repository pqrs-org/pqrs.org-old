<div class="container">
  <header>
    <div class="jumbotron">
      <h1>Disable DragAndDrop</h1>
      <div class="row">
        <div class="col-lg-6">
          <p>
            A Thunderbird extension which disables drag and drop in the folder pane.
            This extension prevents unintended folder movement.
          </p>
          <p>
            {{#strip_html}}
              <a class="btn btn-primary btn-lg" target="_blank"
                href="https://addons.mozilla.org/thunderbird/addon/disable-draganddrop-tb/">
                Download from Thunderbird ADD-ONS
              </a>
            {{/strip_html}}
          </p>

          <p>
            {{#strip_html}}
              <a class="btn btn-default btn-small"
                href="files/disable_dnd_tb-3.2.0.xpi">
                Download from this site
                &nbsp;<small>(Version 3.2.0)</small>
              </a>
            {{/strip_html}}
          </p>

          <p>
            <a href="https://github.com/tekezo/disable_dnd_tb/blob/master/LICENSE.md" target="_blank">
            <img src="/img/icon/license-public-domain.svg" alt="Public Domain" />
            </a>
          </p>
        </div>
        <div class="col-lg-4" style="height: 250px; background: url(img/logo.png) no-repeat right">
        </div>
      </div>
    </div>
  </header>

  <div class="row">
    <div class="col-md-9 pqrs-docs-container">
      <section>
        <div class="page-header">
          <h1 id="development">
            Development
          </h1>
        </div>
        <p>
          <a href="https://github.com/tekezo/disable_dnd_tb" target="_blank">https://github.com/tekezo/disable_dnd_tb</a>
        </p>
      </section>

      <section>
        <div class="page-header">
          <h1 id="history">
            Version History
          </h1>
        </div>
        {{#histories}}
          <h2>
            Version {{version}}
            {{#updated}}
              <small>
                {{#format_date}}
                  {{updated}}
                {{/format_date}}
              </small>
            {{/updated}}

            {{#link}}
              <a class="btn btn-default" href="{{link}}">
                Download
              </a>
            {{/link}}
          </h2>
          <div style="margin-left: 2em">
            {{{body}}}
          </div>
        {{/histories}}
      </section>
    </div>
    <div class="col-md-3">
      {{> ../../pqrs_tabs }}
    </div>
  </div>
</div>
